<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Covid-19 Tracker India</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container-fluid px-md-5 ">
    <div class=" text-center text-warning">
        <h1>C<i class="fas fa-virus"></i> vid-19 Tracker India</h1>
        <br>
        <br>
        <br>
        <h1 class="text-white text-center"><u>Total Cases In India</u></h1>
        </div>
        <br>
        
<div class="row">
    
    <div class="col-3 text-white text-center">
        <div class="card bg-secondary" >
            
       <h1>Confirmed  
        <%-stateConfirm%></h1>

    </div>
</div>

    <div class="col-3 text-white text-center">
        <div class="card bg-success" >
        <h1>Recovered 
        <%-stateRecover%></h1>
        </div>
    </div>
    <div class="col-3 text-white  text-center">
        <div class="card bg-danger" >
        <h1>Deaths
            
        </h1>
        <h1><%-stateDeath%></h1>
        </div>
    </div>
    <div class="col-3  text-white text-center">
        <div class="card bg-info" >
        <h1>Active
            
        </h1>
        <h1 ><%-stateActive%></h1> 
        </div>
    </div>
</div>
  </div>
<br>

<div class="container">
<h1 class="text-center text-white"><u>Statewise C<i class="fas fa-virus"></i>vid Cases</u></h1>
<br> 
  
    <div class="row">
       
       <div class="col-12">
        <table>
            <tr>
      <th><h1 class="text-white">States</h1></th>
      <th><h1 class="text-secondary">Confirmed</h1></th>
      <th><h1 class="text-success">Recovered</h1></th>
     <th> <h1 class="text-danger">Death</h1></th>
      <th> <h1 class="text-info">Active</h1></th>
            </tr>
      <tr>
          <td>
            <%statewise.slice(1,36).forEach(function(element,index){ %>
                <br><h3><%-element.state%></h3>
                   <% }) %>
                  
          </td>
          
          <td>
            <%statewise.slice(1,36).forEach(function(element,index){ %>
             <br><h3><%-element.confirmed%></h3>
                   <% }) %>
          </td>
          <td>
            <%statewise.slice(1,36).forEach(function(element,index){ %>
                <br><h3><%-element.recovered%></h3>
                   <% }) %>
          </td>
          <td>
            <%statewise.slice(1,36).forEach(function(element,index){ %>
                <br><h3><%-element.deaths%></h3>
                   <% }) %>
          </td>
          <td>
            <%statewise.slice(1,36).forEach(function(element,index){ %>
                <br><h3><%-element.active%></h3>
                    <% }) %>
          </td>
          
      </tr> 
            </table>
       </div>
  </div>
</div>
<br>

